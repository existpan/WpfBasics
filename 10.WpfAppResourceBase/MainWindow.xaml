<Window
    x:Class="_10.WpfAppResourceBase.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:_10.WpfAppResourceBase"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="800"
    Height="450"
    mc:Ignorable="d">
    <Grid>
        <StackPanel>
            <Button
                Height="40px"
                Margin="10"
                Click="Button_Click"
                Content="Udpate" />
            <Button
                Height="40px"
                Margin="10"
                Content="Button1"
                Foreground="{StaticResource SolidColor}" />
            <Button
                Height="40px"
                Margin="10"
                Content="Button2"
                Foreground="{DynamicResource SolidColor}" />
        </StackPanel>
    </Grid>
</Window>
