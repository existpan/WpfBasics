<Window x:Class="_02.WpfStyleBasics.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_02.WpfStyleBasics"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <Style x:Key="TextBlockStyle" TargetType="{x:Type TextBlock}">
            <Setter Property="FontFamily" Value="微软雅黑"></Setter>
            <Setter Property="Foreground" Value="IndianRed"></Setter>
            <Setter Property="FontWeight" Value="Light"></Setter>
            <Setter Property="FontSize" Value="16"></Setter>
        </Style>
    </Window.Resources>
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="text1" Style="{StaticResource TextBlockStyle}" ></TextBlock>
            <TextBlock Text="text2" Style="{StaticResource TextBlockStyle}" ></TextBlock>
            <TextBlock Text="text3" Style="{StaticResource TextBlockStyle}"></TextBlock>
            <TextBlock Text="text4" Style="{StaticResource TextBlockStyle}"></TextBlock>
        </StackPanel>
    </Grid>
</Window>
