<UserControl
    x:Class="ConversationServicesModuleC.Views.ViewC"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ConversationServicesModuleC.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid Background="#fff">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>
        <TextBlock
            Margin="4px"
            FontSize="16px"
            Text="Notice" />
        <TextBlock
            Grid.Row="1"
            FontSize="48px"
            Text="Content" />
        <StackPanel Grid.Row="2" Orientation="Horizontal">
            <Button
                Width="90px"
                Height="30px"
                Margin="5px"
                Command="{Binding OkCommand}"
                Content="Ok" />
            <Button
                Width="90px"
                Height="30px"
                Margin="5px"
                Command="{Binding CancelCommand}"
                Content="Cancel" />
        </StackPanel>
    </Grid>
</UserControl>
